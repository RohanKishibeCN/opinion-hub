{
  "framework": "vite",
  "installCommand": "npm install && npm --prefix frontend install",
  "buildCommand": "npm run build",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" }
  ],
  "redirects": [
    { "source": "/(.*)", "destination": "/index.html", "permanent": false }
  ]
}
